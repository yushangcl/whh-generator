<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="${mapperPackage}.${tableInfo.beanName}Mapper">

    <!-- 结果映射 resultMap-->
    <resultMap id="BaseResultMap" type="${beanPackage}.${tableInfo.beanName}">
    #foreach($field in ${tableInfo.tableFields})
        <result column="${field.filed}" property="${field.property}"/>
    #end
    </resultMap>

    <!-- 通用查询结果列-->
    <sql id="Base_Column_List">
        ${tableInfo.fileds}
	</sql>

</mapper>